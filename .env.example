# ============================================
# CONFIGURACIÓN DE LA API
# ============================================

# Clave secreta para firmar JWT tokens (CAMBIAR EN PRODUCCIÓN)
# Generar una clave segura con: openssl rand -hex 32
SECRET_KEY=cambiar-esta-clave-secreta-por-una-aleatoria-de-al-menos-32-caracteres

# Tiempo de expiración de tokens (en minutos)
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Tiempo de expiración de refresh tokens (en días)
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# BASE DE DATOS
# ============================================

# URL de conexión a la base de datos
# Desarrollo (local):
DATABASE_URL=mysql+pymysql://root:123@127.0.0.1/BBDDJoy

# Producción (ejemplos):
# MySQL en Railway:
# DATABASE_URL=mysql+pymysql://user:password@containers-us-west-123.railway.app:1234/railway

# PostgreSQL en Railway:
# DATABASE_URL=postgresql://user:password@containers-us-west-123.railway.app:5432/railway

# MySQL en PlanetScale:
# DATABASE_URL=mysql+pymysql://user:password@aws.connect.psdb.cloud/database?ssl_ca=/etc/ssl/cert.pem

# ============================================
# CORS - Orígenes permitidos
# ============================================

# Dominios permitidos para hacer requests a la API (separados por comas)
# Desarrollo:
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Producción (ejemplo):
# ALLOWED_ORIGINS=https://miapp.com,https://www.miapp.com,https://app.miapp.com

# ============================================
# CONFIGURACIÓN GENERAL
# ============================================

# Modo debug (True para desarrollo, False para producción)
DEBUG=True
